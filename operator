##################
# 复合运算符
#   +=  *=  -=  **=
num1 = 10
abc = num1 + 5
num1 = abc
print(num1)

num2 = 10
num2 = num2 + 5
print(num2)

num3 = 10
num3 += 5
print(num3)

num4 = 10
num4 *= 20
print(num4)

num5 = 10
num5 **= 3
print(num5)

